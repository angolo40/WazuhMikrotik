<!-- Example -->

<group name="syslog,">

  <rule id="100001" level="12">
    <decoded_as>UFL_login</decoded_as>
    <description>Mikrotik: user authentication</description>
    <group>mikrotik,authentication_success</group>
  </rule>

  <rule id="100002" level="12">
    <decoded_as>UFL_login_failure</decoded_as>
    <description>Mikrotik: user authentication failure</description>
    <group>mikrotik,authentication_failed</group>
  </rule>

  <rule id="100003" level="5">
    <decoded_as>UFL_wireguard_in</decoded_as>
    <description>Mikrotik: wireguard user logged in</description>
    <group>mikrotik,authentication_success</group>
  </rule>

  <rule id="100004" level="5">
    <decoded_as>UFL_wireguard_out</decoded_as>
    <description>Mikrotik: wireguard user logged out</description>
    <group>mikrotik,authentication_success</group>
  </rule>

  <rule id="100005" level="5">
    <decoded_as>UFL_ovpn_in</decoded_as>
    <description>Mikrotik: ovpn user logged in</description>
    <group>mikrotik,authentication_success</group>
  </rule>

  <rule id="100006" level="5">
    <decoded_as>UFL_ovpn_out</decoded_as>
    <description>Mikrotik: ovpn user logged out</description>
    <group>mikrotik,authentication_success</group>
  </rule>

</group>
